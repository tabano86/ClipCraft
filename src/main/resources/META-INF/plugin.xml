
<idea-plugin>
    <id>com.clipcraft</id>
    <name>ClipCraft</name>
    <vendor>ClipCraft</vendor>

    <resource-bundle>messages.ClipCraftBundle</resource-bundle>
    <idea-version since-build="241"/>

    <description><![CDATA[
    A professional tool to recursively copy files and directory contents as a formatted Markdown string.
    <br/>
    Features:
    <ul>
        <li>Handles text files (with content) and binary files (by name).</li>
        <li>Configurable include/exclude globs and file size limits via a settings UI.</li>
        <li>Fully asynchronous with a background progress indicator.</li>
    </ul>
  ]]></description>

    <depends>com.intellij.modules.platform</depends>

    <extensions defaultExtensionNs="com.intellij">
        <applicationService
                serviceImplementation="com.clipcraft.settings.SettingsStateProvider"/>
        <applicationConfigurable
                parentId="tools"
                instance="com.clipcraft.settings.ClipCraftConfigurable"
                id="com.clipcraft.settings.ClipCraftConfigurable"
                key="settings.displayName"/>
        <notificationGroup id="ClipCraft notifications" displayType="BALLOON" key="notification.group.name"/>
    </extensions>

    <actions>
        <action
                id="com.clipcraft.action.ClipCraftAction"
                class="com.clipcraft.action.ClipCraftAction"
                icon="AllIcons.Actions.Copy"
                text="Copy as Markdown"
                description="Copies selected files or directory contents as a formatted Markdown string.">

            <!-- Project tool window -->
            <add-to-group group-id="ProjectViewPopupMenu" anchor="last"/>

            <!-- Git/Version Control Changes view -->
            <add-to-group group-id="ChangesViewPopupMenu" anchor="last"/>

            <!-- Editor right-click menu -->
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>

            <!-- Optional: Favorites/Scope view -->
            <add-to-group group-id="ScopeViewPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>