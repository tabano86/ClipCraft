# IntelliJ IDEA project settings & metadata
.idea/
*.iws
*.iml
*.ipr
.idea_modules/

# Exclude workspace configuration and local settings (do not share)
.idea/**/workspace.xml
.idea/**/tasks.xml
.idea/**/usage.statistics.xml
.idea/**/dictionaries
.idea/**/libraries
.idea/**/shelf/
.idea/**/modules.xml

# User-specific temporary files
*.swp
*.swo

# Build, generated, and dependency directories
.gradle/                # Gradle cache and generated files
build/                  # Build output directory
target/                 # Maven build output (if applicable)
out/                    # Other output directories

# Allow Gradle wrapper jar for builds even when ignoring other Gradle files
!gradle/wrapper/gradle-wrapper.jar

# Local configuration files (do not commit sensitive information)
local.properties

# OS-specific files
.DS_Store
Thumbs.db

# Log files
*.log

# Temporary & backup files
tmp/
*.tmp
*.bak
*.backup

# Environment configuration (customize as needed)
.env